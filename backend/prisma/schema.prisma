generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  email     String
  username  String
  password  String 
  reviews   Review[]
  lists     List[]
}

model Movie {
  id      Int       @id @default(autoincrement())
  title   String
  year    DateTime
  reviews Review[]
  lists   List[]    @relation("MoviesOnList")
}

model Review {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String
  ratings   Int
  userId    Int
  movieId   Int
  user      User     @relation(fields: [userId], references: [id])
  movie     Movie    @relation(fields: [movieId], references: [id])
}

model List {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())

  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  movies    Movie[]   @relation("MoviesOnList")
}
